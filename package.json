{
  "name": "vue-webview-workspace",
  "version": "1.0.0",
  "description": "VS Code Webview Vue Template split into pnpm workspace",
  "private": true,
  "engines": {
    "vscode": "^1.74.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "compile": "pnpm -r compile",
    "watch": "pnpm -r --parallel watch",
    "lint": "eslint \"packages/**/*.{ts,vue}\"",
    "typecheck": "pnpm -r typecheck",
    "build:full": "./scripts/build.sh",
    "dev:full": "./scripts/dev.sh"
  },
  "keywords": [
    "vscode",
    "extension",
    "webview",
    "vue",
    "pnpm",
    "workspace"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "pnpm": ">=7.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^9.8.0",
    "typescript": "^4.8.4"
  }
}